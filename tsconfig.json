{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*.ts",
    ],
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}