{
    "name": "ulti-bot",
    "version": "0.1.1",
    "description": "AI opponent for the card game Ulti",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "start": "node ./lib/index.js",
        "test": "jest",
        "lint": "tslint -p tsconfig.json --fix",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\""
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "commander": "^7.1.0",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/lodash": "^4.14.168",
        "@types/node": "^14.14.31",
        "codecov": "^3.1.0",
        "jest": "^26.6.3",
        "prettier": "^1.13.2",
        "ts-jest": "^26.5.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^4.1.5"
    },
    "jest": {
        "transform": {
            "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "html",
            "json-summary"
        ]
    }
}
